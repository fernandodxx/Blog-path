<div class="mx-auto md:w-2/3 w-full">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    
    <div class="px-8">
      <%= render @post %>
    <div>

    </div>

   
    <% if user_signed_in? %>
      <div class="inline-block text-white"><%= link_to "Back", posts_path, class: "ml-2 rounded-lg py-2 px-3 bg-green-600 font-medium" %></div>
      <div class="inline-block text-white"><%= button_to "Destroy", post_path(@post), method: :delete, class:"ml-2 rounded-lg py-1 px-3 bg-red-600 font-medium"%></div>
    <% else %>
      <div class="inline-block text-white"><%= link_to "Back", posts_path, class: "ml-2 rounded-lg py-2 px-3 bg-gray-100 font-medium" %></div>
    <%end%>
</div>
